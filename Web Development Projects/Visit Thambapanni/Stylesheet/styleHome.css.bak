/body styling starts/
*{
  font-family: Arial, Helvetica, sans-serif;
  margin: 0; padding: 0;
  text-decoration:none ;
  list-style: none;
}
::selection{
  background: orange;
  color: #ffb224;
}
html{
  font-size: 62.5%;
  overflow-x:hidden;
  scroll-behavior: smooth;
  
}
/body styling ends/

/navigation bar styling starts/
header{
  position: absolute;
  top: 0; left:0;right:0;
  display:flex;
  justify-content: space-between;
  padding: 4px 20px;
  background-color: rgba(54, 52, 52, 0.295); 
  z-index:1;
}
.button{ 
  background-color: rgb(247, 171, 58);
  color: #fff;  
  border: none;
  color: white;
  padding: 10px 12px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  text-transform: uppercase;
  border-radius: 8px;

}
.button:hover  {
  background: rgba(255, 165, 0, .2);
  color: rgb(247, 171, 58);
}
.nav a {
  color: white;
  font-size: 18px;
  text-transform: uppercase;
  border: 1px solid transparent;
  padding: 7px 20px;
  border-radius:3px ;
  line-height: 80px; 
}
.nav a:hover {
  border: 1px solid rgb(255,255,255);
  transition: .7s;
  color: rgb(150,150,150);
}
.nav .icon {
  color:#fff;
  font-size:30px;
  line-height: 80px;
  float: right;
  margin-right: 20px;
  cursor: pointer;
  display: none;
} 
@media (max-width: 1080px) {
  .nav a:not(:first-child) {
    display: none;

  }
  label.logo{
    font-size: 32px; 
    padding-left: 60px;
  }
  .nav a {
    margin-right: 20px;
    font-size: 17px;
  }
  .nav a.icon {
    float: right;
    display: block;
  }
}

@media (max-width: 909px) {
  .navClass.responsive {
    position: relative;
  }

  .nav.responsive .icon {
    position: absolute;
    right: 10px;
    top: 10px;
  }
  .nav.responsive a {
    float: none;
    display: block;
    text-align: center; 
    padding-right: 100px;
  }
/navigation bar styling ends/


/home section styling starts/
}
section{
  padding: 2rem 9%;
}
.homechar{
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column;
  position: relative;
  z-index: 0;
}
.homechar .content{
  text-align: center;
}


.homechar .content p{
  font-size: 4.5rem;
  color: #000;
  padding: .5rem 0;
  padding-bottom: 60px;
  padding-top: 50px;
}


.homechar .video-container video{
  position: absolute;
  top: 0;left: 0;
  z-index: -1;
  height: 100%;width: 100%;
  object-fit: cover;
}
.img {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

/home section styling ends/

/shop section styling starts/
.headchar{
  text-align: center;
  padding: 2.5rem;
}


.salechar{
  background-image: url("imagesHome/Made.jpg");
  max-width: 200%;
  height: 300px;
  background-size: cover; 
}
.salechar {
  font-size: 3rem;
  font-family: Arial;
  color: #fff;
  padding-left: 100px;
  padding-top: 10rem;
}
.salechar p{
  font-size: 7rem;
  font-family: Arial;
  font-weight: bolder;
  color: #fff;
  padding-left: 100px;
  padding-top: 2rem;
  text-transform: uppercase;
}
.salechar h3{
  font-size: 3rem;
  font-family: Arial;
  color: #fff;
  padding-left: 100px;
  padding-top: 2rem;
}
.salechar .btn{
  margin-left: auto;
  display: inline-block;
  margin-top: auto;
  background-image: url("imagesHome/made.jpg");
  padding: 150px 600px;
  border: .2rem solid #fff;
  text-align: center;
}

}.shopchar{
  min-height: 100vh ;
}
.shopchar h1{
  padding-top: 100px;
  padding-bottom: 100px;
}


/shop section styling ends/



/home section styling starts/
.headGallerychar{
    text-align: center;
    padding-top: 10rem;
}
.headGallerychar span{
  font-size: 3.5rem;
  background: rgb(107,107,107 );
  color: rgb(61,61,61);
  border-radius: .5rem;
  padding: 2rem 1rem;
}
.rows{
  display: flex;
  padding: 50px 4px;
}
.colomns {
  max-width: 30%;
  padding: 0 4px;
} 
.colomns img {
  margin-top: 8px;
  vertical-align: middle;
  width: 100%;
}
.gallerychar{
  margin-left: 100px;
}
.test img {
  transition:  .7s ;
}
.test:hover img {
  transform: scale(1.7);
}
.colomns .btn{
  font-size: 20px;
  display: inline-block;
  margin-top: 1rem;
  background: rgb(150,150,150);
  color: #292929;
  padding: 1rem 17rem;
  border: .1rem solid black;
  cursor: pointer;
  text-align: center; 
}
.colomns .btn:hover{
  background:rgb(214,214,214) ;
  color:rgb(41,41,41);
}

/home section styling ends/

/footer section styling starts/
* {
    box-sizing: border-box;
}

.column {
    float: left;
    width: 33.33%;
    padding: 10px;
    height: 500px;

}


.row:after {
    content: "";
    display: table;
    clear: both;

}
.btnSubschar {
  background: rgb(247, 171, 58);
  color: #fff;
  margin: 10px .17px;
  cursor: pointer;
  text-align: center;
  padding: .6rem 1rem ;  
  font-size: 20px;
  text-transform: uppercase;
  border-radius: 8px;
}
.btnSubschar:hover  {
  background: rgba(255, 165, 0, .2);
  color: rgb(247, 171, 58);
}  
.buttonchar{ 
  background-color: rgb(247, 171, 58);
  color: #fff;  
  border: none;
  color: white;
  padding: 10px 12px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  text-transform: uppercase;
  border-radius: 8px;

}
.buttonchar:hover  {
  background: rgba(255, 165, 0, .2);
  color: rgb(247, 171, 58);
}
footer .content {
  max-width: 1000px;
  margin: auto;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 16px;
}

footer{
  background-color: rgb(92, 105, 104);
  line-height: 35px; 
  
  
}
footer .content a:hover{
  opacity: .65;
  color: orange;
  font-size: 30px; 
}
.column{
	background-color:rgb(92, 105, 104);
	color:white;
	
}
/footer section styling ends/

