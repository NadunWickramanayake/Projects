*{
  font-family: 'arial';
  margin: 0;
  padding: 0;
  text-decoration:none ;
  list-style: none;
  box-sizing:border-box;
  
}

body{
	min-height:150vh;
	margin: 0;
	align-items:center;
	height: 2000px;
	padding:0;
	
}
.banner{
	width:100%;
	height:100vh;
	overflow:hidden;
	display:flex;
	justify-content:center;
	align-items:center;
}
.banner video{
	position:absolute;
	top:0;
	object-fit:cover;
	width:100%;
	height:100%;
	pointer-events:none;
}


/* drop down menu designs*/
.scolor{
	font-size:20px;
	width:150px;
	padding:8px 12px;
	border:solid #dddddd;
	border-radius:5px;
	background-color:#eeeeee;
	cursor:pointer;
		
}
.scolor:focus,
.scolor:hover{
	outline:none;
	border:3px solid #ffdd63;
}



::selection{
  background: orange;
  color: #fff;
}


html{
  
  overflow-x:hidden;
  scroll-behavior: smooth;
}

/*navigation part*/

header{
  position: absolute;
  top: 0; left:0;right:0;
  display:flex;
  justify-content: space-between;
  padding: 4px 20px;
  background-color: rgba(54, 52, 52, 0.295); 
  z-index:1;
  
}

.nav a {
  color: white;
  font-size: 18px;
  text-transform: uppercase;
  border: 1px solid transparent;
  padding: 7px 20px;
  border-radius:3px ;
  line-height: 80px;
 
}
.nav a:hover {
  border: 1px solid rgb(251, 250, 252);
  transition: .5s;
  color: rgb(247, 171, 58);
}
.nav .icon {
  color:#fff;
  font-size:30px;
  line-height: 80px;
  float: right;
  margin-right: 20px;
  cursor: pointer;
  display: none;
}
@media (max-width: 1080px) {
  .nav a:not(:first-child) {
    display: none;

  }
  label.logo{
    font-size: 32px; 
    padding-left: 60px;
  }
  .nav a {
    margin-right: 20px;
    font-size: 17px;
  }
  .nav a.icon {
    float: right;
    display: block;
  }
}

@media (max-width: 909px) {
  .navClass.responsive {
    position: relative;
  }

  .nav.responsive .icon {
    position: absolute;
    right: 10px;
    top: 10px;
  }
  .nav.responsive a {
    float: none;
    display: block;
    text-align: center;
    
  }
.backtopbtn{
  position: fixed;
  width: 50px;
  height: 50px;
  background: orange;
  bottom: 40px;
  right: 50px;
  border-radius:25px;
  text-decoration: none;
  text-align: center;
  line-height: 50px;
  color: white;
  font-size: 22px;
}


}